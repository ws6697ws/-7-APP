<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    >
    <ImageButton
        android:layout_marginRight="8dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/snap"
        android:layout_gravity="center_vertical"
        />
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#526994"
            android:layout_marginBottom="4dp"
            ></TextView>
        <TextView
            android:id="@+id/comment_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            ></TextView>
        <RelativeLayout
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:id="@+id/comment_bottom"
            >
            <TextView
                android:textSize="12sp"
                android:id="@+id/time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                >
            </TextView>
            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/good_button"
                android:layout_marginLeft="120dp"
                android:layout_toLeftOf="@+id/good_text"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/good_text"
                android:layout_toLeftOf="@+id/bad_button"
                android:layout_marginLeft="5dp"
                android:layout_centerInParent="true"
                />
            <ImageButton
                android:layout_marginLeft="20dp"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:id="@+id/bad_button"
                android:layout_toLeftOf="@+id/bad_text"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bad_text"
                android:layout_marginLeft="5dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
