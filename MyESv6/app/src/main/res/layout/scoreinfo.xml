<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/scoreinfom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#efeff4"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#ffffff"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <RelativeLayout
            android:id="@+id/Classid_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/Classid_label"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="课程号"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/cid"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />
        </RelativeLayout >

        <RelativeLayout
            android:id="@+id/cname_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/cname_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="课程"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/cname"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/credit_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/credit_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学分"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/credit"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />
        </RelativeLayout >

        <RelativeLayout
            android:id="@+id/year_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/year_label"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="学年"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/year"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />
        </RelativeLayout >

        <RelativeLayout
            android:id="@+id/term_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/term_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学期"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/term"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />
        </RelativeLayout >

        <RelativeLayout
            android:id="@+id/teacher_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/teacher_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="任课老师"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/teacher"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </RelativeLayout >

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#efeff4"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#ffffff"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <RelativeLayout
            android:id="@+id/gpa_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/gpa_label"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="绩点"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/gpa"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />
        </RelativeLayout >

        <RelativeLayout
            android:id="@+id/rank_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/rank_label"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="排名"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/rank"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />
        </RelativeLayout >

        <RelativeLayout
            android:id="@+id/score_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/score_label"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="成绩"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/myscore"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />
        </RelativeLayout >
    </LinearLayout>
</LinearLayout>
